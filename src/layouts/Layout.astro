---
import '../styles/global.css';
import Header from '../components/Header.astro';
import { ViewTransitions } from 'astro:transitions';

export interface Props {
  title: string;
  description?: string;
  maxWidth?: string;
}

const { title, description = "Computer Science Student and Web Developer", maxWidth = "max-w-3xl" } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="color-scheme" content="dark" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  <ViewTransitions />
    <style is:inline>
      html::view-transition-old(root),
      html::view-transition-new(root),
      body::view-transition-old(root),
      body::view-transition-new(root) {
        background: var(--bg-primary);
      }
    </style>
  </head>
  <body class="min-h-screen bg-[var(--bg-primary)]">
    <!--
      The `transition:name` attribute is the key to fixing the header flicker.
      It tells Astro's View Transitions to treat this element as a single,
      persistent component across all pages.
    -->
  <div class="fixed top-4 inset-x-0 sm:top-8 sm:left-1/2 sm:-translate-x-1/2 z-50">
  <div class="w-full max-w-full sm:max-w-xl h-11 rounded-lg bg-[var(--bg-secondary)]/95 border border-[var(--border-color)]/50 shadow-md backdrop-blur px-2 md:px-4 flex items-center overflow-x-auto">
        <Header />
      </div>
    </div>

    <!-- Main Content -->
    <main class="flex flex-col min-h-full px-4 pt-32 pb-6">
      <div class:list={[maxWidth, "w-full", "mx-auto"]}>
        <slot />
      </div>
    </main>
  </body>
</html>

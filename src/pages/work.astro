---
import Layout from '../layouts/Layout.astro';
import { projectsData } from '../data/projects';
---

<Layout title="Work - Yuvraj Biswal">
  <div class="space-y-10">
    <section>
      <h1 class="text-[25px] font-medium text-[var(--slate-700)] mb-4" style="font-family: 'Bricolage Grotesque', Inter, sans-serif;">Work</h1>
      <p class="text-[var(--text-secondary)]">
        A collection of projects I've worked on â€” systems, databases, ML, and CLI tools.
      </p>
    </section>

    <section>
      <h2 class="text-[22px] font-medium text-[var(--slate-700)] mb-5" style="font-family: 'Bricolage Grotesque', Inter, sans-serif;">Projects</h2>
      
      <ul class="space-y-0">
        {projectsData.Projects.map((project) => (
          <li class="py-3 border-b border-[var(--border-color)] last:border-b-0">
            <div class="flex flex-col sm:flex-row sm:items-baseline gap-1 sm:gap-2">
              <a 
                href={project.repo ? `https://github.com/${project.repo}` : project.link} 
                target="_blank" 
                rel="noopener noreferrer"
                class="font-medium text-[var(--slate-700)]"
              >
                {project.name}
              </a>
              <span class="text-[15px] text-[var(--text-secondary)]">
                {project.desc.split('.')[0]}.
              </span>
            </div>
          </li>
        ))}
      </ul>
    </section>
  </div>
</Layout>

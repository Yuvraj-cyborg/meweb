---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
---

<Layout title="Blog - Yuvraj Biswal">
  <div class="space-y-8">
    <h1 class="text-3xl font-bold text-[var(--text-primary)]">Blog</h1>

    <div class="space-y-6">
      {posts.map((post) => (
        <a href={`/blog/${post.slug}`} class="block group">
          <h2 class="text-lg font-medium text-[var(--text-primary)] group-hover:text-[var(--accent-color)] transition-colors">{post.data.title}</h2>
          <p class="text-sm text-[var(--text-secondary)]">
            {post.data.date.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
            })}
          </p>
        </a>
      ))}
    </div>
  </div>
</Layout>

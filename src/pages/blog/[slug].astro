---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Comments from '../../components/Comments.tsx';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout title={post.data.title} description={post.data.description}>
  <article>

    <div
      class="prose prose-lg max-w-none text-[var(--text-primary)] prose-h2:text-[var(--text-primary)] prose-h3:text-[var(--text-primary)] prose-strong:text-[var(--text-primary)] prose-a:text-[var(--accent-color)] prose-blockquote:border-l-[var(--accent-color)] prose-blockquote:text-[var(--text-secondary)]"
    >
      <Content />
    </div>

    <Comments client:load />
  </article>
</Layout>

---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const entries = await getCollection('journal');
  return entries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'journal'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title={entry.data.title}>
  <article>
    <div class="prose prose-lg max-w-none text-[var(--text-primary)] prose-h2:text-[var(--text-primary)] prose-h3:text-[var(--text-primary)] prose-strong:text-[var(--text-primary)] prose-a:text-[var(--accent-color)] prose-blockquote:border-l-[var(--accent-color)] prose-blockquote:text-[var(--text-secondary)]">
      <Content />
    </div>
  </article>
</Layout>
